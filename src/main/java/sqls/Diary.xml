<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	

<mapper namespace="com.dalrun.dao.DiaryDao">

	<!-- 다이어리 전체 조회 -->
	<select id="getAllDiary" resultType="com.dalrun.dto.DiaryDto">
		select *
		from diary
	</select>

	<!-- 다이어리 작성 -->
<insert id="insertDiary" parameterType="com.dalrun.dto.DiaryDto" useGeneratedKeys="true" keyProperty="diarySeq">
    INSERT INTO diary
    (memId, title, content, wdate)
    VALUES
    (#{memId}, #{title}, #{content}, #{wdate})
</insert>



</mapper>