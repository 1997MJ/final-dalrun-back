<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	

<mapper namespace="com.dalrun.dao.DiaryDao">

	<!-- 다이어리 전체 조회 -->
	<select id="getAllDiary" resultType="com.dalrun.dto.DiaryDto">
		select *
		from diary
	</select>

	<!-- 다이어리 작성 -->
	<insert id="insertDiary" parameterType="com.dalrun.dto.DiaryDto">
		INSERT INTO diary
		(memId, crewSeq, title, content, wdate)
		VALUES (#{memId}, #{crewSeq}, #{title}, #{content}, #{wdate} )
		<selectKey keyProperty="diarySeq" resultType="int" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>


</mapper>