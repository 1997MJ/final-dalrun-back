<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	

<mapper namespace="com.dalrun.dao.CourseDao">

    <select id="courseList" resultType="com.dalrun.dto.CourseDto">
        SELECT *
        FROM course
    </select>
    
      <!-- 코스 작성 -->
    <insert id="adminCourseUpload" parameterType="com.dalrun.dto.CourseDto">
    	INSERT INTO course
    	(areaCode, level, courseTitle, thumbnail, content, star)
    	VALUES
    	(#{areaCode}, #{level}, #{courseTitle}, #{thumbnail}, #{content}, #{star})
    	<selectKey keyProperty="courseSeq" resultType="int" order="AFTER">
    		SELECT LAST_INSERT_ID()
    	</selectKey>
    </insert>
    
</mapper>